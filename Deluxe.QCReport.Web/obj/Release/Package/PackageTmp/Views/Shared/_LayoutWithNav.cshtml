@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@{

    int SecLvl = Convert.ToInt32(ViewBag.SecLevel);
    var supportEmail = "development.support@bydeluxe.com";

}




<div id="header-div">

    <div id="LogoDiv" style="margin-top:1px"><img id="Logo" src="~/Content/Images/Deluxe_Logo_2016_Red_100x100.png" /></div>
    <div id="divHeader" style="margin-top:10px">
        <span id="spanHeader">QC Report</span>
        <div id="maintenance" style="color:orange;display:none;">
            <small><strong>Notice: This site will be down for maintenance between 15:30pm and 15:45pm on 25/06/2021</strong></small>
