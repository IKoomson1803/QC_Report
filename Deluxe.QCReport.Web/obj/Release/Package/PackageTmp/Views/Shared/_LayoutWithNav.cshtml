        @if (SecLvl == 3)
        {
            <button type="button" class="btn btn-sm btn-info" id="btnAdmin">Admin</button>
        }
        <button type="button" class="btn btn-sm btn-default" id="btnToggleDarkMode">Toggle Dark Mode</button>
