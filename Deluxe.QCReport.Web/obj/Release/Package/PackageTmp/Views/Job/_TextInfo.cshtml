@model Deluxe.QCReport.Web.Models.HomeVM

@{
    var itemNo = 0;
    var itemCount = Model.TextInfo_VM.Timecodes.Count;
}


<div class="bs-callout bs-callout-warning" id="text-info">

    <div class="row">
        <div class="col-xs-4">
            <b style="font-size:14px;">@string.Format("{0} - {1}: Text Info", Model.TextInfo_VM.Qcnum, Model.TextInfo_VM.subQcnum)</b>
        </div>


        @if (Model.SecurityLevel >= 1)
        {

            <div class="col-xs-4">
                <div>
                    <button type="button" class="btn btn-xs btn-primary CRUDButton" id="btnSave">Save</button>
                    <button type="button" class="btn btn-xs btn-danger CRUDButton" id="btnReset" onclick="Reset()">Reset</button>
                    <button type="button" class="btn btn-xs btn-warning CRUDButton" id="btnDeletePrompt" disabled>Delete</button>
                </div>

            </div>

        }

    </div>

    @using (Html.BeginForm("SaveTapeLayoutDetails", "Job", FormMethod.Post, new { @class = "form-horizontal", @id = "form_jobdetails", @autocomplete = "on" }))
    {
        @Html.HiddenFor(m => m.TextInfo_VM.Qcnum)
        @Html.HiddenFor(m => m.TextInfo_VM.subQcnum)

        if (Model.TextInfo_VM.CurrentTimecodes != null)
        {
            @Html.HiddenFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfoId)
        }


        if (Model.SecurityLevel >= 1)
        {

            <div class="row">

                @*<div class="col-xs-1 form-group" style="margin-left:5px;">

                        <label class="control-label">&nbsp;</label>

                    </div>*@

                <div class="col-xs-10 form-group" style="margin-left:5px;">

                    <label class="control-label">Text:</label>
                    @Html.TextBoxFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfo, new { @class = "form-control", maxlength = "500", @autocomplete = "on" })


                    @*@Html.TextAreaFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfo, 3, 3, new { @class = "form-control", maxlength = "500", @autocomplete = "on" })*@

                </div>

                <div class="col-xs-1 form-group " style="margin-left:5px;">

                    <label class="control-label">T.C. In:</label>

                    @Html.TextBoxFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeIn, new { @class = "form-control timecode", placeholder = "hh:mm:ss:ff", maxlength = "11", @style = "width:90px" })

                </div>
                <div class="col-xs-1 form-group" style="margin-left:12px;">

                    <label class="control-label float-right">T.C. Out:</label>


                    @Html.TextBoxFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeOut, new { @class = "form-control timecode", placeholder = "hh:mm:ss:ff", maxlength = "11", @style = "width:90px" })
                </div>
            </div>

        }






    }


    @if (Model.TextInfo_VM != null && Model.TextInfo_VM.Timecodes != null && Model.TextInfo_VM.Timecodes.Any())
    {
        <div class="row">
            <div class="col-xs-4 float-left">
                <div class="btn btn-xs btn-primary">
                    Total Items
                    <span class="badge"> @itemCount</span>
                </div>
            </div>
        </div>
        <br/>
        <div id="divscroll" style="height:700px; overflow-y:auto;">

            <table class="table table-striped table-condensed" style="margin-top: 1px;">
                <thead>
                    <tr>
                        @*<td>Item No.</td>*@
                        <td>Text</td>
                        <td>T.C. In</td>
                        <td>T.C. Out</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TextInfo_VM.Timecodes)
                    {
                        itemNo++;

                        <tr class='clickable-row' style="cursor:pointer;" data-tiid="@item.TextInfoId">
                            @*<td class="col-xs-1">@itemNo</td>*@
                            <td class="col-xs-9">@item.TextInfo</td>
                            <td class="col-xs-1">@item.TimecodeIn</td>
                            <td class="col-xs-1">@item.TimecodeOut</td>
                        </tr>

                    }
                </tbody>
            </table>

        </div>


    }




    <div class="row" style="margin-top:20px;">
        <div class="col-sm-4">


        </div>
    </div>

</div>


<!-- Modal -->
<div class="modal fade" id="deletePromptModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body" style="font-size:14px;font-weight:bold;">

            </div>
            <div class="modal-footer">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-sm btn-danger" id="btnDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    function setActiveButton() {
        $(".subMenuOnClick").removeClass("subMenuOnClick")
        $('#lnkQcTextInfo').addClass("subMenuOnClick");
    }

  $(function () {
    $(function () {

        setActiveButton();

        $(".timecode").mask("99:99:99:99");

        $('#btnSave').on("click", function () {


            if ($('#TextInfo_VM_CurrentTimecodes_TextInfo').val() == '') {
               // alert("Please add a text info and continue... ")
                Msg.success("Please add a text info and continue... ", 2 * 1000);
                return;
            }


            /*
            if ($('#TextInfo_VM_CurrentTimecodes_TimecodeIn').val() == '') {
                alert("Please add T.C. In and continue... ")
                return;
            }

            if ($('#TextInfo_VM_CurrentTimecodes_TimecodeOut').val() == '') {
                alert("Please add T.C Out and continue... ")
                return;
            }
            */

            //$('.cssload-preloader').fadeIn();
            var qcno = '@Model.TextInfo_VM.Qcnum';
            var revno = '@Model.TextInfo_VM.subQcnum';
            var myModel = $('#form_jobdetails').serializeObject();

            console.log(myModel)

            $.post('/Job/SaveTextInfoDetails', { model: myModel }).done(function (data) {

                if (data.success == true) {
                    Msg.success(data.msg, 2 * 1000);
                    LoadTextInfoDetails(qcno, revno, null);
                }
                else {
                    Msg.error(data.msg, 5 * 1000);
                }
            })
            .fail(function (xdata) {

                Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
            })
            .always(function () {

                $('.cssload-preloader').hide();

            });
        });


        $('#deletePromptModal').on('shown.bs.modal', function () {

            var itemInfo = $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfo)').val();
            var modal = $(this);
            modal.find('.modal-body').text('Are you sure you want to delete record "' + itemInfo + '"?');

        });

        $('#btnDeletePrompt').on("click", function () {

             if ( $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfoId)').val() == '')
            {
                return;
            }

            $('#deletePromptModal').modal('show');

        });

        $('#btnDelete').on("click", function () {

            $('#deletePromptModal').modal('hide');

            $('table tr').removeClass("selectedRow");
            //$('.cssload-preloader').fadeIn();
            var qcno = '@Model.TextInfo_VM.Qcnum';
            var revno = '@Model.TextInfo_VM.subQcnum';
            var myModel = $('#form_jobdetails').serializeObject();

            $.post('/Job/DeleteTextInfoDetails', { model: myModel }).done(function (data) {

                if (data.success == true) {
                    Msg.success(data.msg, 2 * 1000);
                    LoadTextInfoDetails(qcno, revno, null);

                }
                else {
                    Msg.error(data.msg, 5 * 1000);
                }
            })
            .fail(function (xdata) {

                Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
            })
            .always(function () {

                $('.cssload-preloader').hide();
                $('#deletePromptModal').modal('hide');
                $('body').removeClass('modal-open');
                $('.modal-backdrop').remove();

            });
        });

        $('#btnTCIn').on("click", function () {

            var tc = TimeCodeControl1.TimeCode;

            if (tc != null) {

                $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeIn)').val(tc);
            }
        });


        $('#btnTCOut').on("click", function () {

            var tc = TimeCodeControl1.TimeCode;

            if (tc != null) {

                $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeOut)').val(tc);
            }
        });



        $('.clickable-row').on('click', function () {

            $('table tr').removeClass("selectedRow");
            $(this).addClass("selectedRow");
            var qcno = '@Model.TextInfo_VM.Qcnum';
            var revno = '@Model.TextInfo_VM.subQcnum';
            var tino = $(this).data('tiid');
            $('#btnDeletePrompt').prop('disabled', false);
            $('#btnSave').text('Update');
            PopulateTextInoItemDetails(qcno, revno, tino);

        });


        @*if ('@Model.TextInfo_VM.CurrentTimecodes' != '') {

            $('#btnDeletePrompt').prop('disabled', false);
            $('#btnSave').text('Update');
        }*@



        //**************Save Text Info item on enter **********************************************

        $('#TextInfo_VM_CurrentTimecodes_TextInfo').keyup(function (event) {
            if (event.key == 'Enter') {
                SaveTextInfoEnterClick();
            }
        });

        $('#TextInfo_VM_CurrentTimecodes_TimecodeIn').keyup(function (event) {
            if (event.key == 'Enter') {
                SaveTextInfoEnterClick();
            }
        });

        $('#TextInfo_VM_CurrentTimecodes_TimecodeOut').keyup(function (event) {
            if (event.key == 'Enter') {
                SaveTextInfoEnterClick();
            }
        });



    });

  });

    function SaveTextInfoEnterClick() {

        $('#btnSave').click();

    }

    function Reset() {

            $('table tr').removeClass("selectedRow");
            $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfoId)').val('0');
            $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TextInfo)').val('');
            $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeIn)').val('');
            $('#@Html.IdFor(m => m.TextInfo_VM.CurrentTimecodes.TimecodeOut)').val('');
            $('#btnDeletePrompt').prop('disabled', true);
            $('#btnSave').text('Save');
    }



    function LoadTextInfoDetails(qcno, revno, tino) {

        var scrollPosition = $('#divscroll').scrollTop();

        $.post('/Job/TextInfoDetails', { qcnum: qcno, revnum: revno, tiid: tino }).done(function (data) {

            $("#divContent").html(data);
            Reset();
        })
        .fail(function (xdata) {

            Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
        })
        .always(function () {
            $('#divscroll').scrollTop(scrollPosition);
        });
    }

    function PopulateTextInoItemDetails(qcno, revno, tino) {

        var scrollPosition = $('#divscroll').scrollTop();

        $.post('/Job/PopulateTextInfoItemDetails', { qcnum: qcno, revnum: revno, tiid: tino }).done(function (data) {

            console.log(data)

            $('#TextInfo_VM_CurrentTimecodes_TextInfoId').val(tino);
            $('#TextInfo_VM_CurrentTimecodes_TimecodeIn').val(data.TimecodeIn);
            $('#TextInfo_VM_CurrentTimecodes_TimecodeOut').val(data.TimecodeOut);
            $('#TextInfo_VM_CurrentTimecodes_TextInfo').val(data.TextInfo);

        })
            .fail(function (xdata) {

                Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
            })
            .always(function () {
                $('#divscroll').scrollTop(scrollPosition);

            });
    }

</script>