@model Deluxe.QCReport.Common.Models.ReportVM

@{
    bool isTape = true;
    var videoHeight = "";
    var siremv = "ire";

    if (Model.Header_VM.AssetType.ToLower() != "tape") { isTape = false; }

    if (!isTape) { videoHeight = "100%"; }
    if (Model.OverallSpecs_VM.IreMv == "M") { siremv = "mv"; }
}


<table width="100%" border="0" cellspacing="0" cellpadding="0" height="@videoHeight">
    <tr>
        <td class="blackSquare" align="center" style="padding:2px;height:17px;">
            <b><font class="txt_italic" size="3">VIDEO SPECIFICATIONS</font>&nbsp;&nbsp;(Checks carried out in unity)</b>
        </td>
    </tr>
    <tr>
        <td class="left_right_bottom_border">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" height="100%">
                <tr>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\""); } else { WriteLiteral("width=\"33.3%\""); } class="right_border"><div class="floatLeft">&nbsp;Video Gain:&nbsp;</div> <div class="floatRight"> <b>@Model.OverallSpecs_VM.VideoGain</b> @siremv &nbsp;</div></td>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\""); } else { WriteLiteral("width=\"33.3%\""); } class="right_border"><div class="floatLeft">&nbsp;Chr Gain:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.ChromaGain</b> @siremv &nbsp;</div></td>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\" class=\"right_border\""); } else { WriteLiteral("width=\"33.3%\""); }><div class="floatLeft">&nbsp;Set Up Level:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.SetUp</b> @siremv &nbsp;</div></td>
                    @if (isTape)
                    {
                        <td width="25%" height="100%"><div class="floatLeft">&nbsp;Black Level:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.BlackLevel</b> @siremv &nbsp;</div></td>
                    }
                    
                </tr>
            </table>
        </td>
    </tr>
    <tr>
        <td class="left_right_bottom_border">
            <table valign="top" width="100%" border="0" cellspacing="0" cellpadding="0" height="100%">
                <tr>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\""); } else { WriteLiteral("width=\"33.3%\""); } class="right_border"><div class="floatLeft">&nbsp;Luma Peak:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.LuminancePeak</b> @siremv &nbsp;</div></td>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\""); } else { WriteLiteral("width=\"33.3%\""); } class="right_border"><div class="floatLeft">&nbsp;Luma Avg:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.LuminanceAvg</b> @siremv &nbsp;</div></td>
                    <td height="100%" @if (isTape) { WriteLiteral("width=\"25%\" class=\"right_border\""); } else { WriteLiteral("width=\"33.3%\""); }><div class="floatLeft">&nbsp;Chroma Peak:&nbsp; </div><div class="floatRight"><b>@Model.OverallSpecs_VM.ChromaPeak</b> @siremv &nbsp;</div></td>
                    @if (isTape)
                    {
                        <td height="100%" width="25%"><div class="floatLeft">&nbsp;Chroma Avg:&nbsp;</div><div class="floatRight"><b>@Model.OverallSpecs_VM.ChromaAvg<%=rsHeader.Fields("Chroma_Avg")%></b> @siremv &nbsp;</div></td>
                    }
                </tr>
            </table>
        </td>
    </tr>

    <tr>
        <td valign="top"  @if (isTape) { WriteLiteral("class=\"left_right_border\""); } else { WriteLiteral("class=\"left_right_bottom_border\"");} >
         <table width="100%"  border="0" cellspacing="0" cellpadding="0" height="100%">
		   <tr>
		   @if (isTape) {
		    <td  width="25%" height="100%" class="right_bottom_border"><div class="floatLeft" >&nbsp;Active Picture:&nbsp;</div><div class="floatRight" ><b>@Model.OverallSpecs_VM.ActivePicture</b>&nbsp;</div></td>
		     <td width="25%" height="100%" class="right_bottom_border"><div class="floatLeft" >&nbsp;H Blanking:&nbsp;</div><div class="floatRight" ><b>@Model.IndividualSpecs_VM.HBlanking</b>&nbsp;</div></td>
			 <td width="25%" height="100%" class="right_bottom_border"><div class="floatLeft" >&nbsp;V Blanking:&nbsp;</div><div class="floatRight" ><b>@Model.IndividualSpecs_VM.VBlanking</b>&nbsp;</div></td>
			 <td width="25%" height="100%" >
				 <div class="right_bottom_border floatLeft" style="display:inline-block;width:50%; height:100%;">
				   <div class="floatLeft" > &nbsp;Cond:&nbsp;</div><div class="floatRight" ><b>@Model.IndividualSpecs_VM.ChannelConditions</b>&nbsp;</div>
				 </div>
				 <div class="bottom_border floatLeft" style="display:inline-block;width:49%; height:100%;">
				   <div class="floatLeft" > &nbsp;Track:&nbsp;</div><div class="floatRight" ><b>@Model.IndividualSpecs_VM.ControlTrack</b>&nbsp;</div>
				 </div>
			 </td>
           }
           else { 
			
             <td  width="33.3%" height="100%" class="right_border" ><div class="floatLeft" > &nbsp;Active Picture:&nbsp;</div><div class="floatRight" > <b>@Model.OverallSpecs_VM.ActivePicture</b>&nbsp;</div></td>
			 <td  width="33.3%" height="100%" class="right_border"><div class="floatLeft" > &nbsp;Black Level:&nbsp;</div><div class="floatRight" > <b>@Model.OverallSpecs_VM.BlackLevel</b> @siremv &nbsp;</div></td>
			 <td width="33.3%"  height="100%" ><div class="floatLeft" > &nbsp;Chroma Avge:&nbsp;</div><div class="floatRight" > <b>@Model.OverallSpecs_VM.ChromaAvg</b> @siremv &nbsp;</div></td>
		   
               }
		   </tr>
		 </table>
     </td>
    </tr>
    @if (isTape) {
    <tr>
        <td class="left_right_bottom_border">
            <table width="100%" border="0" cellspacing="0" cellpadding="0" height="100%">
                <tr>
                    <td width="25%" class="right_border"><div class="floatLeft"> &nbsp;Tape Wrap:&nbsp;</div><div class="floatRight"> <b>@Model.IndividualSpecs_VM.TapeWrap</b>&nbsp;</div></td>
                    <td width="25%" class="right_border"><div class="floatLeft">&nbsp;Subtitle:&nbsp;</div><div class="floatRight"><b>@Model.IndividualSpecs_VM.Subtitles</b>&nbsp;</div></td>
                    <td width="25%" class="right_border"><div class="floatLeft">&nbsp;VITC:&nbsp;</div><div class="floatRight"><b>@Model.IndividualSpecs_VM.VITC</b>&nbsp;</div></td>
                    <td width="25%">
                        <div class="right_border floatLeft" style="display:inline-block;width:50%;height:100%;">
                            <div class="floatLeft"> &nbsp;Label:&nbsp;</div><div class="floatRight"> <b>@Model.IndividualSpecs_VM.Label</b>&nbsp;</div>
                        </div>
                        <div style="display:inline-block;width:49%;height:100%;float:left;">
                            <div class="floatLeft"> &nbsp;Slate:&nbsp;</div><div class="floatRight"> <b>@Model.IndividualSpecs_VM.Slate</b>&nbsp;</div>
                        </div>
                    </td>

                <tr>
            </table>
        </td>
    </tr>
    }
</table>
