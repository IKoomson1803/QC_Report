@model Deluxe.QCReport.Common.Models.ReportVM

@{
 
    bool hasLessThanTwoChannels = true;
    int chNumber = Convert.ToInt32(Model.AudioTC_VM.ChannelCount.Replace("Channels", "").Trim());
    
    if (chNumber > 2) { hasLessThanTwoChannels = false; }
}

<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td class="blacksquare" style="padding:2px" align="center" colspan="5">
            <b><font class="txt_italic" size="3">AUDIO SPECIFICATIONS</font>&nbsp;&nbsp;(F/S = Full or Spot Check QC)</b>
        </td>
    <tr>
    <tr>
        <td class="left_border">&nbsp;Tone Phase:&nbsp;<b>@Model.AudioTC_VM.AudioPhaseTone</b>&nbsp;</td>
        <td>Comp/M&E Comp:&nbsp;<b>@Model.AudioTC_VM.CompMESync</b>&nbsp;</td>
        <td>Noise Reduction:&nbsp;<b>@Model.AudioTC_VM.NoiseReduction</b>&nbsp;</td>
        <td class="right_border" colspan="2">&nbsp;</td>
    </tr>
    <tr>
        <td class="left_border"> &nbsp;TC Integrity:&nbsp;<b>@Model.AudioTC_VM.TCIntegrity</b>&nbsp; </td>
        <td>LTC & VITC Match:&nbsp;<b>@Model.AudioTC_VM.LTCVITCMatch</b>&nbsp;</td>
        <td>&nbsp;</td>
        <td class="right_border" colspan="2">&nbsp;</td>
    </tr>
    <tr>
        <td colspan="5" height="100%">
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td @if (hasLessThanTwoChannels) { WriteLiteral("width=\"100%\""); } else { WriteLiteral("width=\"50%\""); } class="blacksquare" height="100%">
                        <table width="100%" border="0" cellspacing="0" cellpadding="2" height="100%">
                            <tr>
                                <td height="17px" width="6%" class="bottom_border">&nbsp;</td>
                                <td height="17px" width="12%" class="bottom_border"><b>Track</b></td>
                                <td height="17px" width="12%" class="bottom_border"><b>Lang</b></td>
                                <td height="17px" width="12%" class="bottom_border"><b>LUFS</b></td>
                                <td height="17px" width="12%" class="txt_boldtype2 bottom_border">Tone</td>
                                <td height="17px" width="12%" class="txt_boldtype2 bottom_border">Avg db</td>
                                <td height="17px" width="12%" class="txt_boldtype2 bottom_border">Peak</td>
                                <td height="17px" width="12%" class="txt_boldtype2 bottom_border">True</td>
                                <td height="17px" width="12%" class="txt_boldtype2 bottom_border">F/S</td>
                            </tr>

                            @if (hasLessThanTwoChannels)
                            {
                                for (int i = 0; i < chNumber; i++)
                                {
                                    <tr>
                                        <td width="6%" class="right_border"><b>@Model.AudioTC_VM.ChannelsList[i].ChannelNo</b></td>
                                        <td width="18%">@Model.AudioTC_VM.ChannelsList[i].Description &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Language &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].LKFS &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Tone &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Average &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Peak &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].TruePeak &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].FullSpotQC &nbsp;</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                for (int i = 0; i < (chNumber / 2); i++)
                                {
                                    <tr>
                                        <td width="6%" class="right_border"><b>@Model.AudioTC_VM.ChannelsList[i].ChannelNo</b></td>
                                        <td width="18%">@Model.AudioTC_VM.ChannelsList[i].Description &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Language &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].LKFS &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Tone &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Average &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Peak &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].TruePeak &nbsp;</td>
                                        <td width="12%">@Model.AudioTC_VM.ChannelsList[i].FullSpotQC &nbsp;</td>
                                    </tr>
                                }
                            }
                        </table>
                    </td>

                    <td @if (hasLessThanTwoChannels) { WriteLiteral("style=\"display:none;\""); } else { WriteLiteral("width=\"50%\" class=\"right_top_bottom_border\" height=\"100%\" valign=\"top\" height=\"100%\""); } >
					      <table width="100%" border="0" cellspacing="0" cellpadding="2" height="100%" >
							     <tr>
									<td width="6%"  height="19px" class="bottom_border">&nbsp;</td>
									<td height="17px" width="12%" class="bottom_border"><b>Track</b></td>
									<td height="17px" width="12%" class="bottom_border"><b>Lang</b></td>
									<td width="12%" height="19px" class="bottom_border"><b>LUFS</b></td>
									<td width="12%" height="19px" class="txt_boldtype2 bottom_border">Tone</td>
									<td width="12%" height="19px" class="txt_boldtype2 bottom_border">Avg db</td>
									<td width="12%" height="19px" class="txt_boldtype2 bottom_border">Peak</td>
									<td width="12%" height="19px" class="txt_boldtype2 bottom_border">True</td>
									<td width="12%" height="19px" class="txt_boldtype2 bottom_border">F/S</td>
							   </tr>
                                @if (!hasLessThanTwoChannels)
                                {
                                    for (int i = (chNumber / 2); i < chNumber; i++)
                                    {
                                        <tr>
                                            <td width="6%" class="right_border"><b>@Model.AudioTC_VM.ChannelsList[i].ChannelNo</b></td>
                                            <td width="18%">@Model.AudioTC_VM.ChannelsList[i].Description &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Language &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].LKFS &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Tone &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Average &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].Peak &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].TruePeak &nbsp;</td>
                                            <td width="12%">@Model.AudioTC_VM.ChannelsList[i].FullSpotQC &nbsp;</td>
                                        </tr>
                                    }
                                }
						</table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
