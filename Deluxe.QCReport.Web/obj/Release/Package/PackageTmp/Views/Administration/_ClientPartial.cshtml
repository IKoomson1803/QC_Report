
    <title>Clients Managemant</title>
    <link rel="stylesheet" type="text/css" href="~/css/admin.css?v=@DateTime.Now.ToString("yyyyMMddHHmmss")" />


<a href="#Top">&nbsp;</a>
<div id="rowTopMargin"></div>


<div class="bs-callout bs-callout-warning">
     <div class="adminHeader">Clients Management</div>

    <form id="frmClient" name="frmClient">
        <input type="hidden" id="CustID" name="CustID" />


        <div class="row">
            <div class="col-md-4">

            </div>

            <div class="col-md-8">
                <div class="PaddTopBot">
                    <label>Search By Customer Name (3 letters minimum) :</label><br />
                    <input id="CustomerNameSearch" class="ui-corner-all ui-textbox longTextBox" type="text" placeholder="Customer's Name search" /><br />
                    <span style="color:red;font-weight:bold;font-size:12px;">Auto search for customer's name and hit enter to display the details below.  </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">

            </div>

            <div class="col-md-8">

                <div class="PaddTopBot">
                    <label>Customer Name:</label><br />
                    <input id="CustName" name="CustName" class="ui-corner-all ui-textbox longTextBox" type="text" placeholder="Customer Name (mandatory)" required /><br />
                </div>

                <div class="PaddTopBot">
                    <label>Address:</label><br />
                    <textarea id="CustAddress" name="CustAddress" class="ui-corner-all ui-textbox longTextBox" type="text" placeholder="Customer Address (optional)" rows="5"></textarea><br />
                </div>

                <div class="PaddTopBot">
                    <label>Customer Code:</label><br />
                    <input id="CustCode" name="CustCode" class="ui-corner-all ui-textbox" type="text" placeholder="Customer Code (optional)" /><br />
                </div>

                <div class="PaddTopBot">
                    <label>Grading Scale:</label><br />
                    <select id="GradingScale" name="GradingScale" class="ui-corner-all ui-textbox" type="text" style="width:180px">
                        <option value="" selected>Select Grade Scale</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
               </div>


                <div class="PaddTopBot">
                    <label>Phone Number:</label><br />
                    <input id="CustPhone" name="CustPhone" class="ui-corner-all ui-textbox" type="text" placeholder="Phone number (optional)" required /><br />
                </div>


                <div class="PaddTopBot">

                    <button type="button" id="SaveClient" name="SaveClient" class="btn btn-info">
                        Add New
                    </button>
                    <button type="button" id="ResetClientFields" name="ResetClientFields" class="btn btn-danger">
                        Reset
                    </button>

                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <label class="control-label">&nbsp;</label>
                <span id="divClientMessage" class="divMessage"></span>
            </div>
        </div>


    </form>










</div>

<div class="row">&nbsp;</div>
<div class="row" id="divClients" style="overflow:auto;height:400px;"></div>


<script type="text/javascript" src="~/Scripts/Custom/client.js?v=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
