@model  Deluxe.QCReport.Common.Models.UserAccountVM


<title>Users Managemant</title>
<link rel="stylesheet" type="text/css" href="~/css/admin.css?v=@DateTime.Now.ToString("yyyyMMddHHmmss")" />


<a href="#Top">&nbsp;</a>
<div id="rowTopMargin"></div>



<div class="bs-callout bs-callout-warning">
    <div class="adminHeader">Users Management</div>


    <form id="frmUser" name="frmUser">

        <input type="hidden" id="qcUserId" name="qcUserId" />
       
        <div class="row">&nbsp;</div>

        <div class="row">
            <div class="col-md-2">
                <label class="control-label">CORP User Name:</label>
            </div>
            <div class="col-md-4 form-group">
                <input id="UserName" name="UserName" class="normalTextBox" required placeholder="CORP username (mandatory)" />
            </div>

            <div class="col-md-2">
                <label class="control-label">Full Name:</label>
            </div>
            <div class="col-md-4 form-group">
                <input id="Fullname" name="Fullname" class="normalTextBox" placeholder="User full name (optional)" />
            </div>

        </div>



        <div class="row">
            <div class="col-md-2">
                <label class="control-label">Location:</label>
            </div>
            <div class="col-md-4 form-group">
                @Html.DropDownListFor(m => m.Location,
              new SelectList(Model.LocationsList, "key", "value"), "Select Location  (mandatory)",
              new { @style = "width:300px; height:25px;" })
            </div>

            <div class="col-md-2">
                <label class="control-label">Role:</label>
            </div>
            <div class="col-md-4 form-group">
                <select id="SecurityLevel" name="SecurityLevel" class="normalTextBox" required>
                    <option value="">Select Security Level  (mandatory)</option>
                    <option value="0">Read Only</option>
                    <option value="1">Operator</option>
                    @*<option value="2">Super User</option>*@
                    <option value="3">Administrator</option>
                </select>
            </div>

        </div>

        <div class="row" style="display:none;">
            <div class="col-md-2">
                <label class="control-label">Phone:</label>
            </div>
            <div class="col-md-4 form-group">
                <input id="Phone" name="Phone" class="shortTextBox" placeholder="User phone number (optional)" />
            </div>

        </div>

        <div class="row" id="divEnabled">
            <div class="col-md-2">
                <label class="control-label">Enable:</label>
            </div>
            <div class="col-md-4 form-group">
                <input id="Active" name="Active" type="checkbox" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <label class="control-label">&nbsp;</label>
            </div>
            <div class="col-md-3  form-group">
                <button type="button" id="SaveUser" class="btn btn-info" onclick="saveUser()">
                    Add New
                </button>
                <button type="button" id="ResetUserFields" class="btn btn-danger" onclick="resetUserFields()">
                    Reset
                </button>
            </div>

        </div>


        <div class="row">
            <div class="col-md-12  form-group">
                <label class="control-label">&nbsp;</label>
                <span id="divUserMessage" class="divMessage"></span>
            </div>
        </div>
    </form>

    <div class="row">&nbsp;</div>


    <div class="row" id="divUsers" style="overflow:auto;height:400px;">
        @{Html.RenderPartial("_UsersGrid", Model);}
    </div>

</div>


<script type="text/javascript" src="~/Scripts/Custom/user.js?v=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>



