@model Deluxe.QCReport.Common.Models.AspectRatioVM

    <title>Aspect Ratios Managemant</title>
    <link rel="stylesheet" type="text/css" href="~/css/admin.css?v=@DateTime.Now.ToString("yyyyMMddHHmmss")" />


<a href="#Top">&nbsp;</a>
<div id="rowTopMargin"></div>

<div class="bs-callout bs-callout-warning">
    <div class="adminHeader">Aspect Ratio Management</div>

    <form id="frmAspectRatio" name="frmAspectRatio">
        @*<input type="hidden" id="AspectID" name="AspectID" />*@ 
        @Html.HiddenFor(m => m.AspectID);

        <div class="row">
            <div class="col-md-4">

            </div>

            <div class="col-md-8">
                <div class="PaddTopBot">
                    <label>Search By Aspect Ratio (3 letters minimum) :</label><br />
                    <input id="AspectRatioSearch" class="ui-corner-all ui-textbox shortTextBox" type="text" placeholder="Aspect Ratio search" /><br />
                    <span style="color:red;font-weight:bold;font-size:12px;">Auto search for aspect ratio and hit enter to display the details below.  </span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">

            </div>

            <div class="col-md-8">

                <div class="PaddTopBot">
                    <label>Aspect Ratio:</label><br />
                    @*<input id="AspectRatio" name="AspectRatio" class="ui-corner-all ui-textbox shortTextBox" type="text" placeholder="Aspect Ratio"  /><br />*@
                    @Html.TextBoxFor(m => m.AspectRatio, (object)(new { @class = "ui-corner-all ui-textbox shortTextBox", placeholder = "Aspect Ratio" }))
                </div>

                <div class="PaddTopBot">

                    <button type="button" id="SaveAspectRatio" name="SaveAspectRatio" class="btn btn-info">
                        Add New
                    </button>
                    <button type="button" id="ResetAspectRatioFields" name="ResetAspectRatioFields" class="btn btn-danger">
                        Reset
                    </button>

                </div>

            </div>

        </div>

    </form>

</div>

<script type="text/javascript" src="~/Scripts/Custom/aspectRatio.js?v=@DateTime.Now.ToString("yyyyMMddHHmmss")"></script>
