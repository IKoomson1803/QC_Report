<script type="text/javascript">
    function setActiveButton() {
        $(".subMenuOnClick").removeClass("subMenuOnClick")
        $("#lnkQcCkecklist").addClass("subMenuOnClick");
    }

    function Save() {
        $('#btnSave').on("click", function () {

            //$('.cssload-preloader').fadeIn();
            var myModel = $('#form_jobdetails').serializeObject();

            console.log('Model: ' + JSON.stringify(myModel))

            $.post('/Job/SaveChecklist', { model: myModel }).done(function (data) {

                if (data.success == true) {
                    Msg.success(data.msg, 2 * 1000);
                }
                else {
                    Msg.error(data.msg, 5 * 1000);
                }
            })
                .fail(function (xdata) {

                    Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
                })
                .always(function () {

                    // $('.cssload-preloader').hide();
                });

        });


    }

    function toggleInterlacedOrProgressiveOrWAVsFlags() {
        $("input[name='ChecklistBanijayRights.InterlacedOrProgressiveCorrectlyFlagged']").change(function () {
            if ($(this).val() === 'False') {
                $('#ChecklistBanijayRights_InterlacedOrProgressiveCorrectlyNotFlaggedReason').show();
            } else if ($(this).val() === 'True') {
                $('#ChecklistBanijayRights_InterlacedOrProgressiveCorrectlyNotFlaggedReason').hide();
                $('#ChecklistBanijayRights_InterlacedOrProgressiveCorrectlyNotFlaggedReason').val('');
            }
        });

        $("input[name='ChecklistBanijayRights.AllAssociatedWAVSPresent']").change(function () {
            if ($(this).val() === 'False') {
                $('#ChecklistBanijayRights_AllAssociatedWAVSNotPresentReason').show();
            } else if ($(this).val() === 'True') {
                $('#ChecklistBanijayRights_AllAssociatedWAVSNotPresentReason').hide();
                $('#ChecklistBanijayRights_AllAssociatedWAVSNotPresentReason').val('');
            }
        });

    }

    function showTabsWidget() {
        $(".tab-nav-wrapper li.active").click();
        $($(".tab-nav-wrapper li.active a").attr("href")).show();

        $(".tab-nav-wrapper li").click(function (e) {
            e.preventDefault();
            e.stopPropagation();

            $(".tab-nav-wrapper li").removeClass("active");
            $(this).addClass("active");

            var target = $(this).find("a").attr("href");
            $(".tab-content-wrapper").find(".tab-content").hide();
            $(".tab-content-wrapper").find(target).show();
        })


    }

    $(function ()
      {
        $(function ()
        {
            showTabsWidget();
            toggleInterlacedOrProgressiveOrWAVsFlags();
            setActiveButton();
            Save();
 
        });
    });

   
</script>