@model Deluxe.QCReport.Web.Models.HomeVM

@{
    var tapeLayouts = Model.BanijahRightsTapeLayouts;
    var count = tapeLayouts.Count;
    var itemNo = 0;
}

@if (tapeLayouts != null && tapeLayouts.Any())
{

    <div id="divTimecodes" class="col-sm-12 display bs-callout bs-callout-success">


        <table id="tblTimecodes" cellspacing="0" class="table table-striped table-condensed">
            <thead>
                <tr>
                    <td class="tblHeaderCell tblHeaderNumberCell">Item No.</td>
                    <td class="tblHeaderCell">Tape Layout</td>
                    <td class="tblHeaderCell">Timecode In</td>
                    <td class="tblHeaderCell">Timecode Out</td>
                    <td class="tblHeaderCell"> Part Duration ex holds</td>
                    <td class="tblHeaderCell"> Count As Show</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var tapeLayout in tapeLayouts)
                {
                    itemNo++;

                <tr class='timecode-clickable-row' style="cursor:pointer;" data-timecodeid="@tapeLayout.Id" title="Click the row to update the tape layout">
                    <td>@itemNo</td>

                    <td>
                        @tapeLayout.Type
                    </td>
                    <td>
                        @tapeLayout.TimecodeIn
                    </td>
                    <td>
                        @tapeLayout.TimecodeOut
                    </td>
                    <td>
                        @tapeLayout.CountAsShow
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>

}


