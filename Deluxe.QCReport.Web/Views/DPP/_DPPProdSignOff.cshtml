@model Deluxe.QCReport.Web.Models.HomeVM

<div class="bs-callout bs-callout-warning">
    <div class="row">
        <div class="col-xs-4">
            <b style="font-size:14px;">@string.Format("{0} - {1}: Production sign off as acceptable for transmission", Model.DPPProdSignOff.QCNum, Model.DPPProdSignOff.SubQCNum)</b>
        </div>


        @if (Model.SecurityLevel >= 1)
        {

            <div class="col-xs-4 text-center">

                <button class="btn btn-xs btn-primary CRUDButton" id="btnSave">Save</button>
            </div>

        }


    </div>

    @using (Html.BeginForm("SaveHeaderDetails", "Job", FormMethod.Post, new { @class = "form-horizontal form-group-sm", @style = "margin-top: 20px;", @id = "form_jobdetails" }))
    {
        @Html.HiddenFor(m => m.DPPProdSignOff.QCNum);
        @Html.HiddenFor(m => m.DPPProdSignOff.SubQCNum);


        <div class="row">
            <div class="col-sm-2 text-right">

                <label class="control-label">Authorised by:</label>
            </div>

            <div class="col-sm-5 form-group">

                @Html.TextBoxFor(m => m.DPPProdSignOff.AuthorisedBy, new { @class = "form-control", @style = "width:300px", maxlength = "150" })

            </div>


        </div>

        <div class="row">
            <div class="col-sm-2 text-right">

                <label class="control-label">Date:</label>
            </div>

            <div class="col-sm-5 form-group">
                   <div class="input-group">
                    @Html.TextBoxFor(m => m.DPPProdSignOff.AuthorisedDate, new { @class = "form-control", @style = "width:150px" })
                    <span class="input-group-btn float-left">
                        <button class="btn btn-xs btn-default" type="button" id="btn_AuthotizsedDate"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span></button>
                    </span>
                </div>
            </div>
        </div>

        <div class="row">


            <div class="col-sm-2 text-right">
                <label class="control-label">Job Title:</label>
            </div>

            <div class="col-sm-5 form-group">
                @Html.TextBoxFor(m => m.DPPProdSignOff.JobTitle, new { @class = "form-control", @style = "width:300px", maxlength = "100" })
            </div>


        </div>


    }

</div>



<script>

    function setActiveButton() {
        $(".subMenuOnClick").removeClass("subMenuOnClick")
        $("#lnkDPPProdSignOff").addClass("subMenuOnClick");
    }

    function initializeDatePicker() {
        // setup date picker
        var d = new Date();
        var localtime = d.toLocaleTimeString([], {
            hourCycle: 'h23',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit'
        });

        // setup date picker
        var datePickerSettings = {
            inline: true, showAnim: 'slideDown', dateFormat: 'dd/mm/yy ' + localtime
        };

          $('#@Html.IdFor(m => m.DPPProdSignOff.AuthorisedDate)').datepicker(datePickerSettings);
        $("#btn_AuthotizsedDate").on('click', function () {
            $('#@Html.IdFor(m => m.DPPProdSignOff.AuthorisedDate)').focus();
        });

    }



    $(function () {
        $(function () {

            setActiveButton();
            initializeDatePicker();

            $('#btnSave').on("click", function () {

                var myModel = $('#form_jobdetails').serializeObject();

                $.post('/DPP/SaveDPPProdSignOff', { model: myModel }).done(function (data) {

                    if (data.success == true) {
                        Msg.success(data.msg, 2 * 1000);
                    }
                    else {
                        Msg.error(data.msg, 5 * 1000);
                    }
                })
                    .fail(function (xdata) {

                        Msg.error('Error occured! <b>Status:</b> ' + xdata.status + ' <b>Error Message:</b> ' + xdata.statusText, 5 * 1000);
                    })
                    .always(function () {


                    });
            });



        });



    });





</script>

